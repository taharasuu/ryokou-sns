<h4>public_customer_new</h4>

<div class="container">
  <div class="row">
    <h2 class="page-name">ユーザー登録画面</h2>
  </div>

  <div class="row">
    <%= form_with model: @customer, url: public_customers_path, method: :post do |f| %>
    <table>
      <tr>
        <th>アイコン画面</th>
        <td><%= f.file_field :image, accept: "image/*" %></td>
      </tr>
      <tr>
        <th>ユーザー名</th>
        <td><%= f.text_field :user_name %></td>
      </tr>
      <tr>
        <th>自己紹介文</th>
        <td><%= f.text_area :introduction %></td>
      </tr>
    </table>
    <%= f.submit "登録" , class: "btn btn-primary"%>
    <% end %>
  </div>
</div>