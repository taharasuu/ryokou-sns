<h4>follwer</h4>
<div class="container ppp  col-lg-8">
  <div class="row">
    <h2>フォロワー</h2>
  </div>

  <div class="row">
    <% if @followers.exists? %>
      <table class="table table-hover table-inverse col-md-12 px-auto">
        <thead>
          <tr>
            <th></th>
            <th>ユーザー名</th>
            <th>フォロー数</th>
            <th>フォロワー数</th>
          </tr>
        </thead>
        <tbody>
          <% @followers.each do |follower| %>
          <tr>
            <td><% if follower.image.attached? %>
                  <%= image_tag follower.image, size: "50x50" %>
                <% else %>
                  <%= image_tag asset_path('no_image.jpg'), size: "50x50" %>
                <% end %>
            </td>
            <td><%= follower.user_name %></td>
            <td><%= follower.followeds.count %></td>
            <td><%= follower.followers.count %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="paginate">
        <%= paginate @followers %>
      </div>

    <% else %>
      <h5>ユーザーはいません</h5>
    <% end %>
  </div>
</div>