<h4>admin customers show</h4>

<div class="container ppp col-lg-8">
  <div class="row">
    <h3 class="page-name">
      <strong>
        <%= @customer.first_name %><%= @customer.last_name %>
      </strong>
        さんの
      <strong>
        会員詳細
      </strong>
    </h3>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <table class="table table-hover table-inverse">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @customer.first_name %><%= @customer.last_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @customer.first_name_kana %><%= @customer.last_name_kana %></td>
        </tr>

        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td><% if @customer.is_deleted == true %>
                <p>退会</p>
              <% else %>
                <p>有効</p>
              <% end %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= link_to edit_admin_customer_path(@customer) , class: 'btn btn-success' do %>
              <span>編集する</span>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>

</div>