<h4>admin genres index</h4>

<div class="container col-lg-8">
  <div class="row">
    <h3 class="page-name">ジャンル一覧・追加</h3>
  </div>

  <div class="row">
    <div class="col-lg-10">
      <%= form_with model: Genre.new, url: admin_genres_path, method: :post do |f| %>
      <table>
        <tr>
          <th>ジャンル名</th>
          <td><%= f.text_field :name %></td>
          <td><%= f.submit'新規登録' , class: "btn btn-success" %></td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>

  <div class="row">
    <table class="table table-hover table-inverse col-lg-5">
      <thead>
        <tr>
          <th>ジャンル</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to edit_admin_genre_path(genre) , class: "btn btn-sm btn-success" do %>
              <span>編集する</span>
              <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

